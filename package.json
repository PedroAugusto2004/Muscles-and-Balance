{
  "name": "muscles-and-balance",
  "version": "1.0.0",
  "description": "All-in-one fitness platform for personalized workouts, nutrition tracking, and supplement recommendations",
  "main": "public/index.htm",
  "homepage": "https://muscles-and-balance-7.web.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/muscles-and-balance.git"
  },
  "bugs": {
    "url": "https://github.com/username/muscles-and-balance/issues",
    "email": "support@muscles-and-balance.com"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint \"public/js/**/*.js\"",
    "lint:fix": "eslint \"public/js/**/*.js\" --fix",
    "format": "prettier --write \"public/js/**/*.js\"",
    "format:check": "prettier --check \"public/js/**/*.js\"",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "security": "npm audit && npm run lint",
    "ci": "npm ci && npm run security && npm test",
    "build": "echo 'Build step - static files ready'",
    "deploy": "firebase deploy",
    "start": "firebase serve",
    "dev": "firebase serve --port 3000"
  },
  "keywords": [
    "fitness",
    "nutrition",
    "workout",
    "health",
    "supplements",
    "calorie-calculator",
    "meal-planner",
    "exercise-tracker",
    "wellness",
    "bodybuilding",
    "weight-loss",
    "muscle-gain"
  ],
  "author": {
    "name": "Muscles & Balance Team",
    "email": "team@muscles-and-balance.com",
    "url": "https://muscles-and-balance-7.web.app"
  },
  "contributors": [
    {
      "name": "Lead Developer",
      "email": "dev@muscles-and-balance.com",
      "role": "Full-stack Developer"
    }
  ],
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "eslint": "^9.28.0",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jquery": "^3.6.0",
    "prettier": "^3.0.0"
  }
}